<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Products">
	<select id="selectAll" resultType="products.Product">
		select * from products
	</select>
	<select id="selectOne" parameterType="int" resultType="products.Product">
		select * FROM products where id=#{id}
	</select>
	<insert id="insertProducts" parameterType="products.Product">
		insert into products (id,name,description,price,stock) values
		(products_a.nextval,#{name},#{description},#{price},#{stock})
	</insert>
	<update id="updateProducts" parameterType="products.Product">
		update products set
		name=#{name},description=#{description},price=#{price},stock=#{stock}
		where id=#{id}
	</update>
	<delete id="deleteProducts" parameterType="int">
		delete from products where id=#{id}
	</delete>
</mapper>